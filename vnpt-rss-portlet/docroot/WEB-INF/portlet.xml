<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>conf-rss</portlet-name>
		<display-name>Config Rss</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		
		<init-param>
			<name>contextConfigLocation</name>
			<value>/WEB-INF/rssContext.xml</value>
		</init-param>
		
		<init-param>
			<name>view-template</name>
			<value>/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		
		<supported-locale>vi</supported-locale>
		<supported-locale>en</supported-locale>
		<resource-bundle>content.languagues.Language-listcontents</resource-bundle>
		
		<portlet-info>
			<title>Config Rss</title>
			<short-title>Config Rss</short-title>
			<keywords>Config Rss</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>view-rss</portlet-name>
		<display-name>View Rss</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		
		<init-param>
			<name>contextConfigLocation</name>
			<value>/WEB-INF/viewRssContext.xml</value>
		</init-param>
		
		<init-param>
			<name>view-template</name>
			<value>/html/frontend/view.jsp</value>
		</init-param>
		
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		
		<supported-locale>vi</supported-locale>
		<supported-locale>en</supported-locale>
		<resource-bundle>content.languagues.Language-listcontents</resource-bundle>
		
		<portlet-info>
			<title>View Rss</title>
			<short-title>View Rss</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>