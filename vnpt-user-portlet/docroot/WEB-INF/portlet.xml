<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>vnpt-user</portlet-name>
		<display-name>Vnpt User</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		
		<init-param>
			<name>contextConfigLocation</name>
			<value>/WEB-INF/userContext.xml</value>
		</init-param>
		
		<init-param>
			<name>view-user</name>
			<value>/html/user/view.jsp</value>
		</init-param>
		
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		
		<supported-locale>vi</supported-locale>
		<supported-locale>en</supported-locale>
		<resource-bundle>content.languagues.Language-listcontents</resource-bundle>
		
		<portlet-info>
			<title>Vnpt User</title>
			<short-title>Vnpt User</short-title>
			<keywords>Vnpt User</keywords>
		</portlet-info>
		
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		
	</portlet>
	
	<portlet>
		<portlet-name>vnpt-role</portlet-name>
		<display-name>Vnpt Role</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		
		<init-param>
			<name>contextConfigLocation</name>
			<value>/WEB-INF/roleContext.xml</value>
		</init-param>
		
		<init-param>
			<name>view-role</name>
			<value>/html/role/view.jsp</value>
		</init-param>
		
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		
		<supported-locale>vi</supported-locale>
		<supported-locale>en</supported-locale>
		<resource-bundle>content.languagues.Language-listcontents</resource-bundle>
		
		<portlet-info>
			<title>Vnpt Role</title>
			<short-title>Vnpt Role</short-title>
			<keywords>Vnpt Role</keywords>
		</portlet-info>
		
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		
	</portlet>
	
	<portlet>
		<portlet-name>vnpt-group-role</portlet-name>
		<display-name>Vnpt Group Role</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		
		<init-param>
			<name>contextConfigLocation</name>
			<value>/WEB-INF/groupRoleContext.xml</value>
		</init-param>
		
		<init-param>
			<name>view-grouprole</name>
			<value>/html/grouprole/view.jsp</value>
		</init-param>
		
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		
		<supported-locale>vi</supported-locale>
		<supported-locale>en</supported-locale>
		<resource-bundle>content.languagues.Language-listcontents</resource-bundle>
		
		<portlet-info>
			<title>Vnpt Group Role</title>
			<short-title>Vnpt Group Role</short-title>
			<keywords>Vnpt Group Role</keywords>
		</portlet-info>
		
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		
	</portlet>

	<portlet>
		<portlet-name>vnpt-assign</portlet-name>
		<display-name>Vnpt Assign</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		
		<init-param>
			<name>contextConfigLocation</name>
			<value>/WEB-INF/assignUserContext.xml</value>
		</init-param>
		
		<init-param>
			<name>view-assign</name>
			<value>/html/assignuser/assign_user.jsp</value>
		</init-param>
		
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		
		<supported-locale>vi</supported-locale>
		<supported-locale>en</supported-locale>
		<resource-bundle>content.languagues.Language-listcontents</resource-bundle>
		
		<portlet-info>
			<title>Vnpt Assign</title>
			<short-title>Vnpt Assign</short-title>
			<keywords>Vnpt Assign</keywords>
		</portlet-info>
		
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		
	</portlet>
</portlet-app>