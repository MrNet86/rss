<?xml version="1.0"?>
<!DOCTYPE resource-action-mapping PUBLIC "-//Liferay//DTD Resource Action Mapping 6.2.0//EN" "http://www.liferay.com/dtd/liferay-resource-action-mapping_6_2_0.dtd">

<resource-action-mapping>
	<portlet-resource>
		<portlet-name>vnpt-user</portlet-name>
		<permissions>
			<supports>
				<action-key>ADD_TO_PAGE</action-key>
				<action-key>CONFIGURATION</action-key>
				<action-key>VIEW</action-key>
			</supports>
						
<!-- 			<community-defaults> -->
<!-- 				<action-key>ADD_TO_PAGE</action-key> -->
<!-- 				<action-key>VIEW</action-key> -->
<!-- 			</community-defaults> -->
			
			<site-member-defaults>
				<action-key>ADD_TO_PAGE</action-key>
				<action-key>VIEW</action-key>
			</site-member-defaults>
			
			<guest-defaults >
				<action-key>VIEW</action-key>
			</guest-defaults>

			<guest-unsupported>
				<action-key>ADD_TO_PAGE</action-key>
				<action-key>CONFIGURATION</action-key>
<!-- 				<action-key>VIEW</action-key>				 -->
			</guest-unsupported>

		</permissions>
	</portlet-resource>
	
	<model-resource>
		<model-name>com.vnpt.portlet.user</model-name>
		<portlet-ref>
			<portlet-name>vnpt-user</portlet-name>
		</portlet-ref>

		<permissions>
			<supports>
				<action-key>USER_PER_ADMIN</action-key>
				<action-key>USER_PER_DEFAULT</action-key>
			</supports>
			
			<site-member-defaults>
				<action-key>USER_PER_DEFAULT</action-key>
			</site-member-defaults>
			
			<guest-defaults />
			<guest-unsupported>
				<action-key>USER_PER_ADMIN</action-key>
				<action-key>USER_PER_DEFAULT</action-key>
			</guest-unsupported>

		</permissions>
	</model-resource>

</resource-action-mapping>